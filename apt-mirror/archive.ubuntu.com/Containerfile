# ubuntu-mirror.Containerfile
FROM ubuntu:24.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y --no-install-recommends \
      apt-mirror ca-certificates xz-utils bzip2 gnupg curl perl \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Mirror root + entrypoint
RUN mkdir -p /srv/apt/ubuntu
COPY sync-ubuntu-mirror.sh /usr/local/bin/sync-ubuntu-mirror.sh
RUN chmod +x /usr/local/bin/sync-ubuntu-mirror.sh

VOLUME ["/srv/apt/ubuntu"]
ENTRYPOINT ["/usr/local/bin/sync-ubuntu-mirror.sh"]

