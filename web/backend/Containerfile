FROM docker.io/node:18-alpine

WORKDIR /app

# Install bash, podman, and other required tools
RUN apk add --no-cache bash curl findutils coreutils podman

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --production

# Copy application code
COPY . .

# Create directories for podman
RUN mkdir -p /tmp/containers /tmp/storage

EXPOSE 3001

CMD ["npm", "start"]